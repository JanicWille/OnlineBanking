@model OnlineBanking.ViewModels.KontoViewModel

@Html.HiddenFor(model => model.EroeffnungsDatum)
@Html.HiddenFor(model => model.Kontostand)

<div class="form-group">
    <label class="control-label col-md-2" for="Kontotyp">Kontotyp*</label>
    <div class="col-md-10">
        @Html.DropDownListFor(x => x.KontoTypId, Model.KontoTypList,
            new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-2" for="Iban">Iban*</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Iban, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>
</div>