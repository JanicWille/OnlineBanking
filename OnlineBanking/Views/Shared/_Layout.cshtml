<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
        <div class="container">
            <nav>
                @Html.ActionLink("Online Banking", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="d-md-block d-xl-none" toggle="collapse" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="False">
                    <span class="navbar-toggler-icon"></span>
                </button>

            </nav>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item" style="padding-left: 10px; padding-right: 10px">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-item" style="padding-left: 10px; padding-right: 10px">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-item" style="padding-left: 10px; padding-right: 10px">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="nav-item" style="padding-left: 10px; padding-right: 10px">@Html.ActionLink("Kunden", "Index", "Kunden")</li>
                </ul>
            </div>
            @*<nav class="navbar navbar-light bg-light">
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Suchen" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </nav>*@
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
